<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Organizze" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#01C7D2</item>
        <item name="colorPrimaryVariant">#00B2BC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FEDCBA</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.  -->

    </style>

    <style name="despesaTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDespesa</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDespesa</item>
        <item name="colorAccent">@color/colorAccentDespesa</item>
        <item name="colorPrimaryVariant">@color/colorAccentDespesa</item>
    </style>

    <style name="receitaTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryReceita</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkReceita</item>
        <item name="colorAccent">@color/colorAccentReceita</item>
    </style>

    <style name="Theme.Organizze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Organizze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Organizze.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>